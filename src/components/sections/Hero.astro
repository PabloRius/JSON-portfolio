---
import { basics } from "@cv";

const { name, label, location, image, profiles, phone, email } = basics;
const { city, region } = location;
---

<section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>{city},{region}</span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} via email at: ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            />
          )
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</section>

